<!DOCTYPE html> <html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/style-jrb.css' />
    <link rel='stylesheet' href='/stylesheets/todo.css' />
  </head>
  <body class="body-background-img">
    <div>
      <a href="/todo/list">Show all tasks</a> | <a href="/user/profile">View profile</a>
    </div>

    <div>
      <h1>Create a task</h1>
    </div>


    <form method="POST" action="/todo" id="todoForm">

      <input type="hidden" name="db_id" value="<%= todo._id %>">

      <div class="formfield">
        <div class="formfield--prompt">Title:</div>
        <input type="text" id="todoTitle" name="title" value="<%= todo.title %>">
      </div>
      <div class="formfield">
        <div class="formfield--prompt">Description:</div>
        <textarea id="todoDescription" name="description"><%= todo.description %></textarea>
      </div>
      <div class="formfield">
        <div class="formfield--prompt">Priority:</div>
        <input type="text" id="todoPriority" name="priority" value="<%= todo.priority %>">
      </div>
      <div class="formfield">
        <div class="formfield--prompt">Complete by:</div>
        <input type="text" id="todoDuedate"
          name="due_date"
          value="<%= todo.due_date.getMonth() + 1 %> / <%= todo.due_date.getDate() %> / <%= todo.due_date.getFullYear() %>">
      </div>
      <!-- <div class="formfield">
        <div class="formfield--prompt">Completed:</div>
        <input type="checkbox" id="todoDone" name="complete">
      </div> -->
      <input class="submitButton" type="submit"></input>
    </form>

    <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.1/jquery.validate.min.js"></script>
    <script src="http://jqueryvalidation.org/files/dist/additional-methods.min.js"></script>

    <script src="/javascripts/validate.js"></script>
  </body>
</html>
