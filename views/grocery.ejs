  <body class="body-background-img-additem">
    <div>
      <a href="/grocery/list">Shopping List</a> | <a href="/user/profile">View profile</a>
    </div>

    <div>
      <h1>Add Item</h1>
    </div>


    <form method="POST" action="/grocery" id="todoForm">

      <input type="hidden" name="db_id" value="<%= grocery._id %>">

      <div class="formfield">
        <div class="formfield--prompt">Item:</div>
        <input type="text" id="todoTitle" name="item" value="<%= grocery.item %>" required>
      </div>
      <div class="formfield">
        <div class="formfield--prompt">Quantity:</div>
        <input type="text" id="todoQuantity" name="quantity" value="<%= grocery.quantity %>" required>
      </div>
      <div class="formfield">
        <div class="formfield--prompt">Price:</div>
        <input type="text" id="todoPrice" name="price" value="<%= grocery.price %>" required>
      </div>

      <input class="submitButton" type="submit" value="Add Item"></input>
    </form>

    <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
