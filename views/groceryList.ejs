<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <title><%= user %>'s profile</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/style-jrb.css' />
    <link rel='stylesheet' href='/stylesheets/todo.css' />
  </head>
  <body class="body">
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a href="" class="navbar-brand">RE Grocery List | <%= user %>'s List</a>
          <a class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          </a>
        </div>
        <div class="navbar-collapse collapse" id="navbar">
          <ul class="nav navbar-nav">
            <li><a href="/grocery">Add Item</a></li>
            <li><a href="/user/profile">View Profile</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
              <li><a href="/user/logout">Log Out</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <p> <br><br> </p>
    </div>

    <div class="container">
      <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
          Total Cost:
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                  <% var total = 0; %>
                  <% for (var i = 0; i < groceries.length; i++) { %>
                  <% var currentItem = groceries[i]; %>
                  <% total= total + currentItem.cost;} %>
          $<%= total.toFixed(2); %><br><br>
        </div>
      </div>
      <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        Budget:
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
          $XXX
        </div>
      </div>
      <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        Remaining:
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        $XXX
        </div>
      </div>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <p> <br><br> </p>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mainsection">
      <table class="table">
        <thead>
          <tr>
            <th>Item</th>
            <th>Qty</th>
            <th>Price</th>
            <th>Cost</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% for (var g = 0; g < groceries.length; g++) { %>
          <% var currentItem = groceries[g]; %>
          <tr class="todo-item" id="grocery_<%= currentItem._id %>">
            <td contenteditable/>
              <%= currentItem.item %>
            </td>
            <td contenteditable/>
              <%= currentItem.quantity %>
            </td>
            <td contenteditable/>$
              <%= currentItem.price.toFixed(2); %>
            </td>
            <td contenteditable/>$
              <% console.log(currentItem.cost); %>
              <%= currentItem.cost %>
            </td>
            <td>
              <button class="editButton btn btn-link" id="<%= currentItem._id %>"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>

              <button class="deleteButton btn btn-link" id="<%= currentItem._id %>"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>

              <input name="strike" value="" class="strike_button completeButton checkbox" id="<%= currentItem._id %>" type="checkbox" ></input>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>


      <!-- script references -->
  	<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <script src="../javascripts/groceryHandler.js"></script>
    <script src="../javascripts/strike.js"></script>
    </body>
</html>
